{
  "name": "ccsd/ccsd-inbox",
  "description": "A COAR Notification Inbox for CCSD Platforms",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/CCSDForge/coar-notifications"
    }
  ],
  "require": {
    "php": "^7.4",
    "cottagelabs/coar-notifications": "dev-main",
    "vlucas/phpdotenv": "^5.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "@stable",
    "roave/security-advisories": "dev-latest"
  },
  "license": "GNU GENERAL PUBLIC LICENSE Version 3",
  "support": {
    "source": "https://github.com/CCSDForge/ccsd-inbox.git"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
